<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".OpiaMain"
    android:background="@drawable/startscreen">

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+id/startButton"
        android:src="@drawable/startbuttontransparent"
        android:background="@drawable/startbuttontransparent"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+id/imageView"
        android:src="@drawable/logotransparent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+id/tutorialButton"
        android:src="@drawable/tutorialbutton"
        android:background="@drawable/tutorialbutton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/startButton"
        android:layout_alignStart="@+id/startButton" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+id/aboutButton"
        android:src="@drawable/aboutbutton"
        android:background="@drawable/aboutbutton"
        android:layout_below="@+id/tutorialButton"
        android:layout_alignLeft="@+id/tutorialButton"
        android:layout_alignStart="@+id/tutorialButton" />

</RelativeLayout>
